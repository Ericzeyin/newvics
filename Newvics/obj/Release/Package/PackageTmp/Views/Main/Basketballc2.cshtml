                <div class="col offset-lg-8 mx-auto text-center">
                    <a class="btn btn-primary btn-xl sr-button" role="button" data-aos="zoom-in" data-aos-duration="400" data-aos-once="true" href="@Url.Action("Basketball", "Main")#start">Go Back</a>
                </div>
            </div>
        </div>
    </section>


