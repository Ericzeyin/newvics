<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Login</title>
    @Styles.Render("~/assets/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/assets/fonts/ionicons.min.css")
    @Styles.Render("~/assets/css/Login-Form-Dark.css")
    @Scripts.Render("~/assets/js/jquery.min.js")
    @Scripts.Render("~/assets/bootstrap/js/bootstrap.min.js")
</head>
<body>
    <div class="login-dark">
        <form method="post">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Username"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Log In</button></div>
        </form>

        @if (ViewData["Message"] != null)
        {
         <script>
           $(document).ready(function(){
              alert('@ViewData["Message"]');
             });
         </script>
        }
    </div>

</body>
</html>